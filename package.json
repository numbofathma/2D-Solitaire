{
    "name": "solitaire",
    "main": "electron/main.js",
    "version": "1.0.0",
    "description": "A Solitaire game written in TypeScript using Phaser and Webpack",
    "repository": {
        "url": "https://github.com/sp0ng3w0rthy/solitaire"
    },
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "ts"
        }
    },
    "scripts": {
        "build": "webpack",
        "debug": "webpack-dev-server",
        "compile": "webpack --config electron\\webpack.electron.js && cp www\\index.html electron && electron",
        "ele": "electron electron"
    },
    "author": "GV",
    "license": "ISC",
    "devDependencies": {
        "electron": "^1.6.10",
        "expose-loader": "^0.7.3",
        "file-loader": "^0.11.1",
        "nodemon": "^1.11.0",
        "source-map-loader": "^0.2.1",
        "ts-loader": "^2.1.0",
        "tslint": "^5.3.2",
        "typescript": "^2.3.3",
        "webpack": "^2.6.1",
        "webpack-dev-server": "^2.4.5",
        "webpack-livereload-plugin": "^0.11.0"
    },
    "dependencies": {
        "phaser-ce": "^2.7.10"
    }
}