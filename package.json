{
    "name": "solitaire",
    "version": "1.0.0",
    "description": "A Solitaire game written in TypeScript using Phaser and Webpack",
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "ts"
        }
    },
    "scripts": {
        "start": "npm-watch",
        "build": "webpack && cordova run android",
        "dbg": "webpack-dev-server"
    },
    "author": "GV",
    "license": "ISC",
    "devDependencies": {
        "babel-core": "^6.24.1",
        "babel-loader": "^7.0.0",
        "babel-preset-env": "^1.5.1",
        "expose-loader": "^0.7.3",
        "file-loader": "^0.11.1",
        "npm-watch": "^0.1.9",
        "source-map-loader": "^0.2.1",
        "ts-loader": "^2.1.0",
        "tslint": "^5.3.2",
        "typescript": "^2.3.3",
        "typescript-eslint-parser": "^3.0.0",
        "webpack": "^2.6.1",
        "webpack-cordova-plugin": "^0.1.6",
        "webpack-dev-server": "^2.4.5",
        "webpack-livereload-plugin": "^0.11.0"
    },
    "dependencies": {
        "cordova-android": "^6.2.3",
        "phaser-ce": "^2.7.10"
    },
    "cordova": {
        "platforms": [
            "android"
        ]
    }
}